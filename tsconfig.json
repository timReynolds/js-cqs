{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "strict": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": false,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}